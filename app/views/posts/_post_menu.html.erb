<div class="post-menu" data-menu-target='menu'>
  <ul>
    <li data-menu-target='text'>
      <%= link_to 'View Post', post_path(post), data: { turbo_frame: '_top' } %>
    </li>
    <% if post.user.id == current_user.id %>
      <li data-menu-target='text'>
        <%= button_to 'Delete Post', post_path(post), method: :delete, data: { turbo_confirm: 'Delete post?' } %>
      </li>
      <li data-menu-target='text'>
        <%= button_to 'Edit Post', edit_post_path(post.id), method: :get %>
      </li>
    <% end%>
  </ul>
</div>