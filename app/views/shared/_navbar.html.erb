<header>
  <% if user_signed_in? %>
    <%= link_to image_tag('home.svg'), root_path, class: 'home-link'%></div>
    <input class='nav-toggle' id='nav-toggle' type="checkbox">
    <label for="nav-toggle" class='nav-toggle-label'>
      <span></span>
    </label>
    <nav class='logged-in-nav'>
      <ul class="nav-links">
        <li><%= link_to 'Users' , profiles_path %></li>
        <li><%= link_to 'Profile' , profile_path(current_user.profile) %></li>
        <li><%= link_to "Notifications(#{current_user.requestors.count})" , '/friend_requests' %></li>
        <li><%= link_to 'Sign Out' , destroy_user_session_path, data: { 'turbo-method': :delete } %></li>
      </ul>
    </nav>
  <% else %>
    <nav class='logged-out-nav'>
      <ul>
        <li><%= link_to 'Log In' , new_user_session_path %></li>
        <li><%= link_to 'Sign Up' , new_user_registration_path %></li>
      </ul>
    </nav>
  <% end %>
</header>